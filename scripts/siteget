#!/bin/bash

SITE="$1";
CLONE="tclone $SITE"

if [ -z $SITE ]; then
    echo "
        ERROR:

        The first argument must be the site name from pantheon.


        USAGE:

        siteget got-bugs
    "
    exit 1
fi

if [ -n "$2" ]; then
    SITE="$2"
    CLONE="git clone $1 $2"
fi

cd ~/Sites
tlogin
terminus sites aliases
terminus cli cache-clear

if [ -d ~/Sites/$SITE ]; then
    echo "Directory for $SITE already exists. Pulling"
    cd $SITE
    git pull
else
    eval $CLONE
    cd $SITE
fi

rewritebase.py $SITE
if [ ! -f sites/default/settings.php ]
then
    DB=${SITE//-/_}
    echo "No settings.php. creating..."
    drush si --db-url=mysqli://root:root@localhost/$DB -y > /dev/null 2>&1
fi;
terminus-ssp $SITE
drushfiles $SITE
open "http://$SITE.dev"